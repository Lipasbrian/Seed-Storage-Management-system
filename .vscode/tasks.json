{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start PHP Server",
      "type": "shell",
      "command": "php",
      "args": ["-S", "localhost:8000"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Development Server.*started.*$",
          "endsPattern": "^.*Shutdown.*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
